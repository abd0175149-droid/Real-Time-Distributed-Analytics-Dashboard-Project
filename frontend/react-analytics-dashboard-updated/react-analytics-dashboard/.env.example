# =============================================================================
# Real-Time Distributed Analytics Dashboard - Frontend Configuration
# =============================================================================
# Copy this file to .env and update the values

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API URL (Laravel)
VITE_API_URL=http://localhost:8000/api

# For production:
# VITE_API_URL=https://api.your-domain.com/api

# -----------------------------------------------------------------------------
# WebSocket Configuration (Laravel Reverb)
# -----------------------------------------------------------------------------
VITE_WS_URL=ws://localhost:8080
VITE_REVERB_APP_KEY=my-app-key

# For production with HTTPS:
# VITE_WS_URL=wss://ws.your-domain.com
# VITE_REVERB_APP_KEY=your-production-app-key

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
VITE_APP_NAME="Analytics Dashboard"
VITE_APP_ENV=development

# For production:
# VITE_APP_ENV=production
