# =============================================================================
# Real-Time Distributed Analytics Dashboard - Backend Configuration
# =============================================================================
# Copy this file to .env and update the values

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Analytics Dashboard"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# MySQL Database (Users, Roles, Authentication)
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=analytics_db
DB_USERNAME=root
DB_PASSWORD=

# -----------------------------------------------------------------------------
# ClickHouse Database (Analytics Events)
# -----------------------------------------------------------------------------
CLICKHOUSE_HOST=127.0.0.1
CLICKHOUSE_PORT=8123
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=root
CLICKHOUSE_DATABASE=default

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate with: php artisan jwt:secret
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# -----------------------------------------------------------------------------
# Broadcasting (WebSocket - Laravel Reverb)
# -----------------------------------------------------------------------------
BROADCAST_CONNECTION=reverb

REVERB_APP_ID=my-app-id
REVERB_APP_KEY=my-app-key
REVERB_APP_SECRET=my-app-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# For production, use HTTPS:
# REVERB_PORT=443
# REVERB_SCHEME=https

# -----------------------------------------------------------------------------
# Queue (for background jobs)
# -----------------------------------------------------------------------------
QUEUE_CONNECTION=sync

# For production, use database or redis:
# QUEUE_CONNECTION=database
# QUEUE_CONNECTION=redis

# -----------------------------------------------------------------------------
# Cache
# -----------------------------------------------------------------------------
CACHE_DRIVER=file

# For production, use redis:
# CACHE_DRIVER=redis

# -----------------------------------------------------------------------------
# Session
# -----------------------------------------------------------------------------
SESSION_DRIVER=file
SESSION_LIFETIME=120

# -----------------------------------------------------------------------------
# Redis (optional - for cache and queues)
# -----------------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Mail (for password reset, verification)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# For production, use your SMTP provider:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------
# Add frontend URL for production
# CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# -----------------------------------------------------------------------------
# Kafka Backend Integration
# -----------------------------------------------------------------------------
# URL of the Kafka backend API (Spring Boot cluster behind Nginx)
KAFKA_BACKEND_URL=http://localhost:8080

# Enable tracking ID validation (per documentation 3.3.1)
ANALYTICS_VALIDATE_TRACKING_ID=true

# Auto-sync tracking IDs to Kafka backend when users are created/updated
ANALYTICS_SYNC_TRACKING_IDS=true

# Cache TTL for tracking ID validation (in seconds)
ANALYTICS_TRACKING_ID_CACHE_TTL=300
